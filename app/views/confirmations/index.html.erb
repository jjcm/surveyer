<h1>Listing confirmations</h1>

<table>
  <tr>
    <th>Answer</th>
    <th>Response</th>
    <th>Option</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @confirmations.each do |confirmation| %>
  <tr>
    <td><%= confirmation.answer_id %></td>
    <td><%= confirmation.response %></td>
    <td><%= confirmation.option_id %></td>
    <td><%= link_to 'Show', confirmation %></td>
    <td><%= link_to 'Edit', edit_confirmation_path(confirmation) %></td>
    <td><%= link_to 'Destroy', confirmation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

