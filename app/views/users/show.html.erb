<%= @user.name %>, <%= @user.email %>
<h2>Inferences</h2>
<% @answers.each do |answer| %>
  <% option = answer.option%>
  <% if option %>

    <% #loop through our chain of answers to get our inferences for each quiz chain%>
    <% while !option.option.nil? %>
      <p><%=option.inference%></p>
      <%option = option.option%>
    <% end %>
    
  <%end%>
<%end%>

<h1>Listing Completed Questionnaires</h1>

<table>
  <tr>
    <th>Quiz Taken On:</th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= link_to answer.updated_at, answer%></td>
  </tr>
<% end %>
</table>

