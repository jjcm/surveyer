<h2>Sequence: <%=@question.quiz.name%></h2>
<p>
  <% breadcrumbs = @question %>
  <% while breadcrumbs.option != nil %>
    <span class="answer"> <%= link_to breadcrumbs.answer, :controller => 'options', :action => 'show', :id => breadcrumbs.option.id %> &gt; </span>
    <% breadcrumbs = breadcrumbs.option %>
  <%end%>
  <b><%= @question.question %></b><br/><br/>
  <%= link_to 'Edit current branch', edit_option_path(@question) if @user.id == 1%>
</p>


<table id="answers">
  <tr>
    <th>Answers</th>
    <th><%="Inference" if @user.id == 1%></th>
    <th><%="Followup Question" if @user.id == 1%></th>
    <th></th>
    <th></th>
  </tr>
  <% if !@options.nil? && @options.length != 0 %>
  <% @options.each do |option| %>
    <tr>
      <% if !option.question.empty? %>
      <td><%= link_to option.answer, :id => option, :quiz => option.quiz_id %></td>
      <% else %>
      <td><%= link_to option.answer, :controller => 'answers', :action => 'new', :id => option.id, :quiz => option.quiz_id%></td>
      <% end %>
      <td><%= option.inference if @user.id == 1%></td>
      <td><%= option.question if @user.id == 1%></td>
      <% if @user.id == 1 %>
      <td><%= link_to 'Edit', edit_option_path(option) %></td>
      <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
<% else %>
  <tr><td>No answers yet. Please create one</td></tr>
  <% end %>
</table>

